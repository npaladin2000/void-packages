SDL2-go2-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
    provides="SDL2-devel-${version}_${revision}"
    replaces="SDL2-devel>=0"
	pkg_install() {
		vmove usr/bin
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/share
	}
}
