# Template file for 'ppsspp-odroidgo2'
pkgname=ppsspp-odroidgo2
_pkgname=ppsspp
version=1.10.2
revision=1
create_wrksrc=yes
build_wrksrc="ppsspp-${version}"
build_style=cmake
configure_args="
 -DHEADLESS=OFF
 -DUSE_SYSTEM_FFMPEG=ON
 -DUSING_QT_UI=OFF
